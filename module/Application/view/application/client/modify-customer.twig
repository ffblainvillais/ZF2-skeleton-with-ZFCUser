{% block content %}

    <h1>Modification Clients</h1>

    <form method="post" action="{{ url('modClient', {"idClient" : customer.id}) }}">

        <label for="name">Nom</label>
        <input type="text" name="name" value="{{ customer.nom }}"/><br/>

        <label for="firstname">Prénom</label>
        <input type="text" name="firstname" value="{{ customer.prenom }}"/></br>

        <label for="mail">Mail</label>
        <input type="text" name="mail" value="{{ customer.mail }}"/></br>

        <label for="phone">Téléphone</label>
        <input type="text" name="phone" value="{{ customer.telephone }}"/></br>

        <label for="address">Adresse</label>
        <input type="text" name="address" value="{{ customer.adresse }}"/></br>

        <input class="btn btn-primary" type="submit"/>

    </form>

    <br/>



{% endblock %}
