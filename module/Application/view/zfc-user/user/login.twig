{% extends 'layout/layout' %}

{% block content %}
    {{ parent() }}

    <section class="login-container">

        <form class="form-signin" action="{{ url('zfcuser/login') }}" method="post">
            <h2 class="form-signin-heading">Connexion</h2>

            <label for="inputEmail">Identifiant</label>
            <input type="email" id="inputEmail" class="form-control" placeholder="Mon identifiant" required autofocus>

            <label for="inputPassword">Mot de passe</label>
            <input type="password" id="inputPassword" class="form-control" required><br/>

            <button class="btn btn-lg btn-primary btn-block" type="submit">Connexion</button>
        </form>
        <p class="text-centered">
            <span class="glyphicons glyphicons-user"></span><a href="{{ url('zfcuser/register') }}">Cr√©er un compte</a>
        </p>

    </section>

{% endblock %}